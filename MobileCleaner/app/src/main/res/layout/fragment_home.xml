<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_marginTop="30dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0C2C43">
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorbackgroud"
    >

    <FrameLayout
        android:id="@+id/backgroud_status"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="#430C0C"
        >


        <ImageView
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/img_arrow"
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:src="@drawable/arrow3"
            />

        <ImageView
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/img_bg3"
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:src="@drawable/bg3"
            />
        <ImageView
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/img_loading3"
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:src="@drawable/loading3"
            />

        <TextView

            android:layout_marginTop="5dp"
            android:layout_marginBottom="5sp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/massage"
            android:textColor="#FFF"
            android:text="Your device is not ready"
            android:textSize="18sp"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:orientation="horizontal"
        android:background="#B85E53"
        >
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/icon_notice"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:src="@drawable/yellow"
            />
        <TextView
            android:id="@+id/notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="#FFF"
            android:text="The agent status is needs attention"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="26sp"/>
    </LinearLayout>

    <LinearLayout
    android:background="#0C2C43"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <LinearLayout
            android:id="@+id/anlyze"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/icon_analyze"

                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/dash_icn_green3"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                >
                <TextView
                    android:textColor="#FFF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Device Analyze"
                    android:textSize="20dp"
                    />

                <TextView
                    android:textColor="#37D444"
                    android:id="@+id/status_analyze"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ready"
                    />
            </LinearLayout>
        </LinearLayout>

        <View
            android:background="#FFF"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>


        <LinearLayout
            android:id="@+id/quickScan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/icon_quick"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/dash_icn_green3"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                >
                <TextView
                    android:textColor="#FFF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quick Contacts Scan"
                    android:textSize="20dp"
                    />

                <TextView
                    android:textColor="#37D444"
                    android:id="@+id/status_quick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Good"
                    />
            </LinearLayout>
        </LinearLayout>



        <View
            android:background="#FFF"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:id="@+id/fullScan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/icon_fullScan"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/dash_icn_green3"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                >
                <TextView
                    android:textColor="#FFF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contacts Backup"
                    android:textSize="20dp"
                    />

                <TextView
                    android:textColor="#D1BE3C"
                    android:id="@+id/status_fullScan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lastest backup at 6:01 PM Yesterday"
                    />
            </LinearLayout>
        </LinearLayout>


        <View
            android:background="#FFF"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>


